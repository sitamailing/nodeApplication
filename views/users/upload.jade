extends ../layout

block content
    div(class='upload-user-page')
        div(class='container')
            h2= title
            form#formAddUser(name="upload",method="post",action="/users/upload",enctype='multipart/form-data')
                table
                    tbody
                        tr
                            td
                                input#inputUserName(type="file", placeholder="Upload file", name="uploadFile", accept="text/cvs")
                        tr
                            td
                                input(type='submit', class='submit-button', value='Update')
                                input(type='button', class='cancel', value='Cancel')