extends ../layout

block content
    div(class='add-user-page')
        div(class='container')
            h2= title
            if(errors)
                ul
                    each error in errors
                        li(class='message error-message')= error.msg
            form#formAddUser(name='addUser', method='post',action='/users/update/' + user.iduser)
                include partial/user-form